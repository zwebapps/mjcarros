generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

enum Role {
  USER
  ADMIN
  CUSTOMER
}

model Product {
  id           String        @id @default(cuid()) @map("_id")
  title        String
  description  String
  imageURLs    String[]
  category     String
  categoryId   String
  price        Float
  finalPrice   Float?
  discount     Float?
  featured     Boolean
  // Car specific attributes
  modelName    String        @default("")
  year         Int           @default(0)
  stockQuantity Int          @default(0)
  color        String        @default("")
  fuelType     String        @default("")
  transmission String        @default("")
  mileage      Int?
  condition    String        @default("new")
  productSizes ProductSize[]

  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @default(now()) @updatedAt @map("updated_at")
  OrderItem OrderItem[]
}

model Category {
  id            String         @id @default(cuid()) @map("_id")
  billboard     String
  billboardId   String
  category      String
  categorySizes CategorySize[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}

model Billboard {
  id        String @id @default(cuid()) @map("_id")
  billboard String
  imageURL  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}

model Size {
  id            String         @id @default(cuid()) @map("_id")
  name          String
  productSizes  ProductSize[]
  categorySizes CategorySize[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}

model ProductSize {
  id        String   @id @default(cuid()) @map("_id")
  productId String
  sizeId    String
  product   Product? @relation(fields: [productId], references: [id])
  size      Size     @relation(fields: [sizeId], references: [id])
  name      String?  @map("name")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@index([productId])
  @@index([sizeId])
}

model CategorySize {
  id         String   @id @default(cuid()) @map("_id")
  categoryId String
  sizeId     String
  category   Category @relation(fields: [categoryId], references: [id])
  size       Size     @relation(fields: [sizeId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@index([categoryId])
  @@index([sizeId])
}

model OrderItem {
  id          String  @id @default(cuid()) @map("_id")
  orderId     String
  order       Order   @relation(fields: [orderId], references: [id])
  productId   String
  product     Product @relation(fields: [productId], references: [id])
  productName String
  quantity    Int     @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
}

model Order {
  id         String      @id @default(cuid()) @map("_id")
  orderNumber Int        @unique
  orderItems OrderItem[]
  isPaid     Boolean     @default(false)
  phone      String      @default("")
  address    String      @default("")
  userEmail  String      @default("")
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model ContactPage {
  id        String   @id @default(cuid()) @map("_id")
  heroTitle String   @default("Contact Us")
  heroSubtitle String @default("We’d love to hear from you. Send us a message and we’ll respond promptly.")
  address1  String   @default("178 Expensive Avenue")
  cityLine  String   @default("Philadelphia, 20100 PH")
  phone     String   @default("+1 (555) 000-0000")
  email     String   @default("info@mjcarros.com")
  web       String   @default("www.mjcarros.com")
  hours     String   @default("Mon-Fri: 9-6; Sat: 10-4; Sun: Closed")
  updatedAt DateTime @updatedAt
}
